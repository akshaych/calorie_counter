<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    tools:context="cis350.upenn.edu.easyfooddiary.InformationActivity">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text=""
        android:ems="10"
        android:id="@+id/calories"
        android:layout_below="@+id/breakfast"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Calories per day"
        android:layout_marginTop="13dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/carbs"
        android:text=""
        android:hint="% of Carbohydrates"
        android:layout_below="@+id/calories"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/protein"
        android:text=""
        android:hint="% of Protein"
        android:layout_below="@+id/carbs"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/fat"
        android:text=""
        android:hint="% of Fat"
        android:layout_below="@+id/protein"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp" />

    <Button
        android:text="Save"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:id="@+id/Save"
        android:onClick="onClick"
        android:layout_marginRight="13dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/fat" />

    <Button
        android:text="Macro Goals"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:id="@+id/macrogoals"
        android:onClick="onClick"
        android:layout_marginRight="13dp"
        android:layout_below="@+id/Save"
        android:layout_alignStart="@+id/Save" />

    <Button
        android:text="Display Macro Goals Distribution"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:id="@+id/displayPiChart"
        android:onClick="onClick"
        android:layout_marginRight="13dp"
        android:layout_below="@+id/macrogoals"
        android:layout_alignStart="@+id/Save" />


</RelativeLayout>